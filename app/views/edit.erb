<h1>Edit <%= @recipe.name %> </h1>

<form method="post" action="/recipes/<%= @recipe.id %>">
<input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="name"> Title</label>
  <input id="name" value="<%=@recipe.name%>" type="text"  name="recipe[name]">
  <label for="ingredients"> Content</label>
  <input id="ingredients" value="<%=@recipe.ingredients%>" type="text" name="recipe[ingredients]">
  <label for="cook_time"> Content</label>
  <input id="cook_time" value="<%=@recipe.cook_time%>" type="text" name="recipe[cook_time]">
  <input type="submit">

</form>
