<form action="/recipes/<%=@recipe.id%>" method="post">
  <input type="hidden" name="_method" value="patch"/>

      <label for="name">Title</label>
      <input id="name" type="text" name="name" value="<%= @recipe.name %>" />

      <label for="ingredients">Ingredients</label>
      <input type="text" id="ingredients" name="ingredients" value="<%=@recipe.ingredients%>" />


      <label for="cook_time">Cooking Time</label>
      <input id="cook_time" type="text" name="cook_time" value="<%= @recipe.cook_time %>" />

  <input type="submit" />
</form>
